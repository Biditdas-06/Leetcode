class Solution {
    public boolean isPalindrome(String s) {
        String cleaned = "";

        for(char c : s.toCharArray()){
            if(Character.isLetterOrDigit(c)){
                char lower = Character.toLowerCase(c);
                cleaned += lower;
            }
        }

        int left = 0;
        int right = cleaned.length() - 1;
        while(left < right){
            if(cleaned.charAt(left) != cleaned.charAt(right)){
                return false;
            }
            left++;
            right--;
        }
        return true;
    }
}